<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="stardewPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>stardewValley.Animal</class>
		<class>stardewValley.Axe</class>
		<class>stardewValley.Domestic</class>
		<class>stardewValley.FarmAnimal</class>
		<class>stardewValley.Festival</class>
		<class>stardewValley.Fish</class>
		<class>stardewValley.FishingPole</class>
		<class>stardewValley.Hoe</class>
		<class>stardewValley.Itens</class>
		<class>stardewValley.Pickaxe</class>
		<class>stardewValley.Player</class>
		<class>stardewValley.Store</class>
		<class>stardewValley.Tools</class>
		<class>stardewValley.Villager</class>
		<class>stardewValley.WateringCan</class>
		
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/stardew?useTimezone=true&amp;serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="stardew"/>
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value="stardew"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
        </properties>
    </persistence-unit>
</persistence>
